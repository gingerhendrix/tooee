{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@opentui/react",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "types": ["bun"]
  },
  "references": [
    { "path": "packages/config" },
    { "path": "packages/commands" },
    { "path": "packages/themes" },
    { "path": "packages/overlays" },
    { "path": "packages/clipboard" },
    { "path": "packages/layout" },
    { "path": "packages/renderers" },
    { "path": "packages/shell" },
    { "path": "packages/view" },
    { "path": "packages/ask" },
    { "path": "packages/request" },
    { "path": "packages/choose" },
    { "path": "packages/table" },
    { "path": "apps/cli" }
  ]
}
