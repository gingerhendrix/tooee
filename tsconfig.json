{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@opentui/react",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "types": ["bun"]
  },
  "references": [
    { "path": "packages/commands" },
    { "path": "packages/react" },
    { "path": "packages/view" },
    { "path": "packages/ask" },
    { "path": "packages/request" },
    { "path": "apps/cli" }
  ]
}
